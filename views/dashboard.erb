<% posts.each do |post| %>
  <div class="post">
    <h2>
      <%= Rack::Utils.escape_html post["title"] %>
    </h2>
    <p class="post-image">
    <img src="/uploads/<%= post["src"] %>" alt="<%= Rack::Utils.escape_html post["title"] %>">
    <button class="like" data-id="<%= post["id"] %>">
      <%= post["likes"] %>
    </button>
    </p>
  </div>
<% end %>
<script src="/js/dashboard.js"></script>
